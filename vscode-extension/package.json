{
  "name": "neutron-code",
  "publisher": "yasakei",
  "repository": {
    "type": "git",
    "url": "https://github.com/yasakei/neutron"
  },
  "displayName": "Neutron: Language Support",
  "description": "Language support for Neutron",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:neutron"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "neutron",
        "aliases": ["Neutron", "neutron"],
        "extensions": [".nt", ".ntsc"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./neutron-icon.svg",
          "dark": "./neutron-icon.svg"
        }
      },
      {
        "id": "quark",
        "aliases": ["Quark", "quark", "Neutron Config"],
        "extensions": [".quark"],
        "filenames": [".quark"],
        "configuration": "./quark-language-configuration.json",
        "icon": {
          "light": "./neutron-icon.svg",
          "dark": "./neutron-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "neutron",
        "scopeName": "source.neutron",
        "path": "./syntaxes/neutron.tmLanguage.json"
      },
      {
        "language": "quark",
        "scopeName": "source.quark",
        "path": "./syntaxes/quark.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "neutron.runFile",
        "title": "Neutron: Run File",
        "icon": "$(play)"
      },
      {
        "command": "neutron.formatFile",
        "title": "Neutron: Format File",
        "icon": "$(symbol-misc)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "neutron.runFile",
          "when": "resourceLangId == neutron",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "neutron.runFile",
          "when": "resourceLangId == neutron",
          "group": "navigation"
        },
        {
          "command": "neutron.formatFile",
          "when": "resourceLangId == neutron",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
        "type": "object",
        "title": "Neutron",
        "properties": {
            "neutron.lsp.path": {
                "scope": "resource",
                "type": "string",
                "description": "Path to the neutron-lsp server executable"
            },
            "neutron.path": {
                "scope": "resource",
                "type": "string",
                "description": "Path to the neutron interpreter executable"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.19.0",
    "@types/vscode": "^1.75.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
