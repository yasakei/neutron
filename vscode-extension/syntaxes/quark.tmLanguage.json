{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Quark",
	"scopeName": "source.quark",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#sections" },
		{ "include": "#key-value" },
		{ "include": "#strings" },
		{ "include": "#numbers" },
		{ "include": "#booleans" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.quark",
					"match": "#.*$"
				}
			]
		},
		"sections": {
			"patterns": [
				{
					"name": "entity.name.section.quark",
					"match": "^\\s*\\[([^\\]]+)\\]",
					"captures": {
						"1": { "name": "entity.name.tag.quark" }
					}
				}
			]
		},
		"key-value": {
			"patterns": [
				{
					"match": "^\\s*([a-zA-Z_][a-zA-Z0-9_-]*)\\s*(=)",
					"captures": {
						"1": { "name": "variable.other.key.quark" },
						"2": { "name": "keyword.operator.assignment.quark" }
					}
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.quark",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.quark",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.quark",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.quark",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.quark",
					"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.quark",
					"match": "\\b(true|false)\\b"
				}
			]
		}
	}
}
