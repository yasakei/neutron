{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Neutron",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#strings" },
		{ "include": "#string-interpolation" },
		{ "include": "#keywords" },
		{ "include": "#types" },
		{ "include": "#constants" },
		{ "include": "#modules" },
		{ "include": "#function-definition" },
		{ "include": "#class-definition" },
		{ "include": "#function-call" },
		{ "include": "#operators" },
		{ "include": "#numbers" },
		{ "include": "#variables" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.neutron",
					"match": "//.*$"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.neutron",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.neutron",
							"match": "\\\\."
						},
						{
							"name": "meta.embedded.line.neutron",
							"begin": "\\$\\{",
							"end": "\\}",
							"beginCaptures": { "0": { "name": "punctuation.section.embedded.begin.neutron" } },
							"endCaptures": { "0": { "name": "punctuation.section.embedded.end.neutron" } },
							"patterns": [ { "include": "source.neutron" } ]
						}
					]
				},
				{
					"name": "string.quoted.single.neutron",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.neutron",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"string-interpolation": {
			"name": "meta.string.interpolation.neutron",
			"match": "\\$\\{[^}]*\\}"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.flow.neutron",
					"match": "\\b(if|else|while|for|do|return|break|continue|match|case|default)\\b"
				},
				{
					"name": "keyword.control.exception.neutron",
					"match": "\\b(try|catch|finally|throw|retry)\\b"
				},
				{
					"name": "keyword.control.import.neutron",
					"match": "\\b(use|using|from)\\b"
				},
				{
					"name": "storage.type.neutron",
					"match": "\\b(var|fun|class|static)\\b"
				},
				{
					"name": "storage.modifier.neutron",
					"match": "\\b(safe)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.primitive.neutron",
					"match": "\\b(int|float|string|bool|array|object|any)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.neutron",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.null.neutron",
					"match": "\\b(nil|null)\\b"
				},
				{
					"name": "variable.language.this.neutron",
					"match": "\\b(this|super)\\b"
				}
			]
		},
		"modules": {
			"patterns": [
				{
					"name": "support.module.neutron",
					"match": "\\b(sys|json|math|fmt|arrays|time|http|regex|async|process)\\b"
				}
			]
		},
		"function-definition": {
			"patterns": [
				{
					"match": "\\b(fun)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "storage.type.function.neutron" },
						"2": { "name": "entity.name.function.neutron" }
					}
				},
				{
					"match": "\\b(init)\\s*\\(",
					"captures": {
						"1": { "name": "entity.name.function.constructor.neutron" }
					}
				}
			]
		},
		"class-definition": {
			"match": "\\b(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
			"captures": {
				"1": { "name": "storage.type.class.neutron" },
				"2": { "name": "entity.name.type.class.neutron" }
			}
		},
		"function-call": {
			"patterns": [
				{
					"name": "support.function.builtin.neutron",
					"match": "\\b(say)\\s*\\("
				},
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": { "name": "entity.name.function.neutron" }
					}
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.neutron",
					"match": "\\+\\+|--|\\+|-|\\*|/|%"
				},
				{
					"name": "keyword.operator.comparison.neutron",
					"match": "==|!=|<=|>=|<|>"
				},
				{
					"name": "keyword.operator.logical.neutron",
					"match": "\\b(and|or)\\b|&&|\\|\\||!"
				},
				{
					"name": "keyword.operator.bitwise.neutron",
					"match": "&|\\||\\^|~|<<|>>"
				},
				{
					"name": "keyword.operator.assignment.neutron",
					"match": "="
				},
				{
					"name": "keyword.operator.arrow.neutron",
					"match": "->|=>"
				},
				{
					"name": "keyword.operator.ternary.neutron",
					"match": "\\?|:"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.float.neutron",
					"match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
				},
				{
					"name": "constant.numeric.integer.neutron",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "\\b(var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": { "name": "storage.type.neutron" },
						"2": { "name": "variable.other.neutron" }
					}
				}
			]
		}
	},
	"scopeName": "source.neutron"
}