{
  "version": 3,
  "configurePresets": [
    {
      "name": "winmsvc",
      "description": "Configures the build for 64-bit Windows using the VS 2022 generator and the vcpkg toolchain.",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "winmsvc"
    }
  ]
}