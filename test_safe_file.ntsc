// This is a Neutron Safe Code file (.ntsc)
// All variables and functions must have type annotations

var int x = 10;
var string message = "Hello from safe file!";
var bool flag = true;

fun add(int a, int b) -> int {
    return a + b;
}

fun greet(string name) -> string {
    return "Hello, " + name + "!";
}

say("Testing .ntsc file...");
say("x = " + x);
say(message);
say("flag = " + flag);

var int result = add(5, 10);
say("add(5, 10) = " + result);

var string greeting = greet("Alice");
say(greeting);

say("All type annotations are enforced!");