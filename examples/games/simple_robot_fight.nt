    return 0;
}

fun playerAttack() -> int {
    var damage = 20 + (random() % 16);  // 20-35 damage
    enemyHP = enemyHP - damage;
    if (enemyHP < 0) enemyHP = 0;
    say("âš”ï¸ You attack for " + damage + " damage!");
    return 0;
}

fun enemyAttack() -> int {
    var damage = 15 + (random() % 11);  // 15-25 damage
    playerHP = playerHP - damage;
    if (playerHP < 0) playerHP = 0;
    say("ğŸ’¥ Enemy attacks for " + damage + " damage!");
    return 0;
}

fun battle() -> bool {
    say("");
    say("ğŸš¨ BATTLE START! ğŸš¨");
    say("Enemy HP: " + enemyHP);
    say("");
    
    while (playerHP > 0 && enemyHP > 0) {
        showStatus();
        say("");
        say("Press Enter to attack!");
        sys.input();
        
        // Player attacks
        playerAttack();
        
        if (enemyHP <= 0) {
            break;
        }
        
        say("");
        say("Press Enter for enemy turn...");
        sys.input();
        
        // Enemy attacks
        enemyAttack();
        
        say("");
    }
    
    // Battle result
    if (playerHP > 0) {
        say("");
        say("ğŸ‰ VICTORY! ğŸ‰");
        say("You defeated the enemy robot!");
        wins = wins + 1;
        
        // Heal player
        playerHP = playerHP + 30;
        if (playerHP > 100) playerHP = 100;
        
        return true;
    } else {
        say("");
        say("ğŸ’€ DEFEAT! ğŸ’€");
        say("The enemy robot destroyed you!");
        return false;
    }
}

fun createEnemy() -> int {
    var enemies = [
        "BLAZER",
        "GUARDIAN", 
        "SPARKY",
        "CORTEX",
        "REAPER"
    ];
    
    var enemyName = enemies[round % 5];
    
    // Scale enemy with round
    enemyHP = 80 + (round * 10);
    
    say("ğŸ¤– Enemy: " + enemyName + " (HP: " + enemyHP + ")");
    
    return 0;
}

