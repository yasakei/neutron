use sys;

// Simple random number generator
var randomSeed = 12345;

fun random() -> int {
    randomSeed = (randomSeed * 1103515245 + 12345) % 2147483647;
    if (randomSeed < 0) {
        randomSeed = randomSeed * -1;
    }
    return randomSeed;
}

// Game state
var playerHP = 100;
var enemyHP = 80;
var round = 1;
var wins = 0;

