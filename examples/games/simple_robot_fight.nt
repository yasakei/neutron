    say("â•‘                        GAME OVER                            â•‘");
    say("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
    say("");
    say("ğŸ† Final Stats:");
    say("Rounds Won: " + wins);
    say("Final Round: " + round);
    say("");
    
    if (wins >= 5) {
        say("ğŸŒŸ ROBOT CHAMPION!");
    } else if (wins >= 3) {
        say("ğŸ¥‡ SKILLED FIGHTER!");
    } else if (wins >= 1) {
        say("ğŸ¥‰ DECENT EFFORT!");
    } else {
        say("ğŸ”§ NEEDS REPAIRS!");
    }
    
    say("");
    say("Thanks for playing! ğŸ¤–");
    return 0;
}

// Main game
fun main() -> int {
    showTitle();
    
    say("Welcome to Simple Robot Fight!");
    say("Press Enter to attack, that's it!");
    say("");
    say("Press Enter to start...");
    sys.input();
    
    // Game loop
    while (playerHP > 0) {
        say("");
        say("ğŸš¨ ROUND " + round + " ğŸš¨");
        createEnemy();
        say("");
        say("Press Enter to begin battle...");
        sys.input();
        
        if (battle()) {
            round = round + 1;
            say("");
            say("ğŸ¯ Get ready for the next round!");
            say("Press Enter to continue...");
            sys.input();
        } else {
            break;
        }
    }
    
    showGameOver();
    return 0;
}

// Start the game!
main();