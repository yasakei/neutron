// Test class with proper type annotations in .ntsc file

class Person {
    var string name;
    var int age;
    
    fun init(string n, int a) -> void {
        this.name = n;
        this.age = a;
    }
    
    fun greet() -> string {
        return "Hello, I'm " + this.name + " and I'm " + this.age + " years old.";
    }
    
    fun getAge() -> int {
        return this.age;
    }
}

var Person person = Person();
person.init("Alice", 30);
say(person.greet());
say("Age: " + person.getAge());