say("=== Test Static Variables ===");

// Basic static variable
static var PI = 3.14159;
if (PI == 3.14159) {
    say("✓ Static variable declaration works");
}

// Static with different types
static var MAX_SIZE = 100;
static var APP_NAME = "Neutron";
static var DEBUG = true;

if (MAX_SIZE == 100 and APP_NAME == "Neutron" and DEBUG == true) {
    say("✓ Multiple static variables work");
}

// Static with type annotations
static var int LIMIT = 1000;
if (LIMIT == 1000) {
    say("✓ Static with type annotation works");
}

// Note: Testing immutability requires a separate test file that expects an error
// since trying to reassign will cause compilation to fail
// See test_static_immutable.nt for immutability verification

say("=== All tests passed ===");
