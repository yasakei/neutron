// Test selective imports

say("=== Test 1: Import single function from module ===");
use (now) = from time;
say("✓ Imported 'now' from time module");
say("  Current timestamp: " + now());

say("");
say("=== Test 2: Import single function from file ===");
using (hello) = from "tests/core/test_lib.nt";
say("✓ Imported 'hello' from test_lib.nt");
say("  Result: " + hello());

say("");
say("=== Test 3: Import multiple functions from module ===");
use (now, sleep) = from time;
say("✓ Imported 'now' and 'sleep' from time module");
