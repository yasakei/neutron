// Test both == and != operators to ensure both work correctly after optimization
say("Testing both == and != operators:");

var a = 5;
var b = 10;
var c = 5;

say("a = 5, b = 10, c = 5");
say("a == b: " + (a == b));  // false
say("a != b: " + (a != b));  // true
say("a == c: " + (a == c));  // true
say("a != c: " + (a != c));  // false

var str1 = "hello";
var str2 = "world";
var str3 = "hello";

say("str1 = 'hello', str2 = 'world', str3 = 'hello'");
say("str1 == str2: " + (str1 == str2));  // false
say("str1 != str2: " + (str1 != str2));  // true
say("str1 == str3: " + (str1 == str3));  // true
say("str1 != str3: " + (str1 != str3));  // false

var bool1 = true;
var bool2 = false;
var bool3 = true;

say("bool1 = true, bool2 = false, bool3 = true");
say("bool1 == bool2: " + (bool1 == bool2));  // false
say("bool1 != bool2: " + (bool1 != bool2));  // true
say("bool1 == bool3: " + (bool1 == bool3));  // true
say("bool1 != bool3: " + (bool1 != bool3));  // false

var nil1 = nil;
var nil2 = nil;

say("nil1 = nil, nil2 = nil");
say("nil1 == nil2: " + (nil1 == nil2));  // true
say("nil1 != nil2: " + (nil1 != nil2));  // false

say("All equality and inequality tests passed!");