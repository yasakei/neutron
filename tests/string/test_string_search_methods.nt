say("=== Test String Search Methods ===");

var testStr = "hello world hello";

// Test find method
var pos1 = testStr.find("hello");
if (pos1 == 0) {
    say("✓ find() first occurrence passed");
} else {
    say("✗ find() first occurrence failed: " + pos1);
}

var pos2 = testStr.find("world");
if (pos2 == 6) {
    say("✓ find() middle occurrence passed");
} else {
    say("✗ find() middle occurrence failed: " + pos2);
}

var pos3 = testStr.find("xyz");
if (pos3 == -1) {
    say("✓ find() not found passed");
} else {
    say("✗ find() not found failed: " + pos3);
}

// Test find with start parameter
var pos4 = testStr.find("hello", 1);
if (pos4 == 12) {
    say("✓ find() with start parameter passed");
} else {
    say("✗ find() with start parameter failed: " + pos4);
}

// Test rfind method
var pos5 = testStr.rfind("hello");
if (pos5 == 12) {
    say("✓ rfind() last occurrence passed");
} else {
    say("✗ rfind() last occurrence failed: " + pos5);
}

var pos6 = testStr.rfind("xyz");
if (pos6 == -1) {
    say("✓ rfind() not found passed");
} else {
    say("✗ rfind() not found failed: " + pos6);
}

// Test index method (should work like find)
var pos7 = testStr.index("world");
if (pos7 == 6) {
    say("✓ index() found passed");
} else {
    say("✗ index() found failed: " + pos7);
}

// Test rindex method (should work like rfind)
var pos8 = testStr.rindex("hello");
if (pos8 == 12) {
    say("✓ rindex() found passed");
} else {
    say("✗ rindex() found failed: " + pos8);
}

say("=== String Search Methods Tests Complete ===");