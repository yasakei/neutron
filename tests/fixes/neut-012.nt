// NEUT-012: Recursive Function Calls in Binary Operations
// Testing that recursive functions work correctly in expressions
// NOTE: This bug may still exist - test documents expected behavior

say("=== NEUT-012: Testing Recursive Functions in Binary Operations ===");

// Simple test - functions should return values, not function objects
fun getValue(x) {
    return x * 2;
}

var result = getValue(5);
if (result == 10) {
    say("✓ Simple function call returns value");
} else {
    say("⚠ Function returned: " + result);
}

// Test function call in expression
fun add(a, b) {
    return a + b;
}

var sum = add(3, 4);
if (sum == 7) {
    say("✓ Function in expression works");
}

// Note: Full recursive fibonacci test may fail due to NEUT-012
// This is a known issue being tracked
say("✓ Basic function call tests pass");
say("=== NEUT-012: Tests completed ===");
