// Test nested loops (creates loop jumps)
var sum = 0;
var i = 0;
while (i < 5) {
    var j = 0;
    while (j < 5) {
        sum = sum + 1;
        j = j + 1;
    }
    i = i + 1;
}

if (sum == 25) {
    say("✓ Nested loops with jumps work correctly");
}

// Test for loop with breaks (creates multiple jump points)
var count = 0;
for (var k = 0; k < 100; k = k + 1) {
    if (k == 10) {
        break;
    }
    count = count + 1;
}

if (count == 10) {
    say("✓ For loop with break jump works correctly");
}

